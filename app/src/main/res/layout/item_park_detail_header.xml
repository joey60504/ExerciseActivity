    <TextView
        android:id="@+id/txt_park_detail_close_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_park_detail_desc"
        tools:text="@string/txt_no_closed_info" />

    <TextView
        android:id="@+id/txt_park_detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_park_detail_close_info"
        tools:text="室內區" />

    <TextView
        android:id="@+id/txt_park_detail_open_in_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
